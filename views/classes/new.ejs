<%- include('../partials/header.ejs') -%>

<h1>&nbsp&nbsp&nbsp&nbspAdd New Class to Schedule</h1>

<div class="newForm">
    <table>
        <tr class="tableAddBody">
          <th>
            <form action="/classes" method="POST">
              <label>Date & Time:</label>
                <input type="datetime-local" name="classTime" value="<%= date %>">
              
              <label>Class Title:</label>
                <input type="text" name="className" autocomplete="on">

              <label>Price:</label>
                <input type="text" name="price" autocomplete="off">
              
              <label>Instructor:</label>
                <select name="instructor">
                  <option value="Courtney">Courtney</option>
                </select>

              <label>Description:</label>
                <input type="text" name="description" autocomplete="off">

              <label>Class Size:</label>
                <input type="text" name="classSize" autocomplete="off">

              <input type="submit" style="margin:10px;" value="Add Class to Schedule" id="submit" onclick="<% %>">
              </form>
          </th>
        </tr>
       
      </table>
</div>

<%- include('../partials/footer.ejs') -%>