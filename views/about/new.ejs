<%- include('../partials/header.ejs') -%>

<h3>&nbsp&nbsp&nbsp&nbspAdd a Testimonial</h3>

<div class="newForm">
    <form action="/about" method="POST">
      <table>
        <tr class="tableAddBody">
          <th>
              <label>Date & Time:</label>
                <input type="datetime-local" name="dateTimeComment" value="<%= dateTime %>">
              
              <label>Title:</label>
                <input type="text" name="commentTitle" autocomplete="off">
                
              <label>Comment:</label>
                <input type="text" name="comments" autocomplete="off">
          </th>
        </tr>
      </table>
      <div class="container">
        <div class="center">
        <button type="submit" style="margin:10px; width:60px; text-justify: center;" class="addButton" id="submit">Submit</button>
        </div>
      </div>
    </form>
</div>

